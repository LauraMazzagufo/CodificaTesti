    <text type="letter" n="LL1.16">
        <front>
            <!-- per l'esercizio traascrivo solo un frammento del corpo della lettera -->
        </front>

        <body>
            <pb n="1" xml:id="LL1.16_page-1" facs="#LL1.16_0001"/>
            <div type="letter-opener" xml:lang="fr">
                <dateline>
                    <lb n="1" facs="#LL1.16_0001_line1"/>
                        <date when="06-26">Juin 26</date>: 
                        <address>
                            <addrLine>
                                <placeName>Puteau</placeName>
                            </addrLine>
                            <addrLine>
                                – <placeName>19 bis rampe</placeName>
                            </addrLine>
                    <lb n="2" facs="#LL1.16_0001_line2"/>
                            <addrLine>
                                de <placeName><hi rend="underline">Neuilly</hi></placeName>
                            </addrLine>
                        </address>
                </dateline>
            </div>

            <div type="letter-body" xml:lang="it">
                <salute rend="align(center)">
                    <lb  n="3" facs="#LL1.16_0001_line3"/>
                    Mio caro <persName key="CP">Carluccio</persName>
                </salute>
                
                <ab type="paragraph"> <!-- non uso <p> perché la fine del paragrafo non corrisponde con una nuova riga -->
                    <s>
                    <lb n="4" facs="#LL1.16_0001_line4"/>
                    avendo steso l’intero <term subtype="music-term">duetto</term> 
                    <lb n="5" facs="#LL1.16_0001_line5"/>
                    e mancando in esso qualche 
                    <lb n="6" facs="#LL1.16_0001_line6"/>
                    cosetta, desidererei che tu
                    <lb n="7" facs="#LL1.16_0001_line7"/>
                    t’incommodassi a venire à 
                    <lb n="8" facs="#LL1.16_0001_line8"/>
                    <placeName>Puteau</placeName> per tutto fissare, e
                    <lb n="9" facs="#LL1.16_0001_line9"/>
                    nell’istesso tempo darmi la 
                    <lb n="10" facs="#LL1.16_0001_line10"/>
                    <term subtype="music-term">sortita</term> di 
                    <persName>Rubini</persName>, se è <w>termi
                    <lb n="11" facs="#LL1.16_0001_line11"/>
                    nata</w>.</s><s>T’aspetto in qual giorno
                    <lb n="12" facs="#LL1.16_0001_line12"/>
                    ed in qual’ora vorrai.</s>
                </ab>

            </div>

            <div type="letter-closer" xml:lang="it">
                <salute>
                    - Addio
                </salute>
                    <lb n="13" facs="#LL1.16_0001_line13"/>
                <signed>
                    Il tuo <persName key="VB"> <hi rend="underline">Vincenzillo</hi></persName>
                </signed>

            </div>
        </body>

        <back>
        </back>
